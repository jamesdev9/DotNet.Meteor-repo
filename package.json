{
  "name": "dotnet-meteor",
  "publisher": "nromanov",
  "version": "1.0.0",
  "description": "Run and Debug .NET Mobile Apps",
  "displayName": ".NET Meteor",
  "author": "Nikita Romanov",
  "license": "MIT",
  "icon": "img/logo.png",
  "preview": false,
  "bugs": {
    "url": "https://github.com/JaneySprings/DotNet.Meteor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JaneySprings/DotNet.Meteor.git"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    ".NET",
    ".NET Mobile",
    "C#",
    "MAUI",
    "dotnet"
  ],
  "engines": {
    "vscode": "^1.73.0"
  },
  "activationEvents": [
    "onDebugResolve:dotnet-meteor.debug",
    "onDebugInitialConfigurations",
    "onLanguage:csharp",
    "workspaceContains:**/*.{csproj,sln,slnf,csx}"
  ],
  "main": "./extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnet-meteor.selectActiveProject",
        "title": ".NET Meteor: Select workspace project"
      },
      {
        "command": "dotnet-meteor.selectActiveConfiguration",
        "title": ".NET Meteor: Select project configuration"
      },
      {
        "command": "dotnet-meteor.selectActiveDevice",
        "title": ".NET Meteor: Select device"
      }
    ],
    "taskDefinitions": [
      {
        "type": "dotnet-meteor.build",
        "required": [],
        "properties": {}
      },
      {
        "type": "dotnet-meteor.publish",
        "required": [],
        "properties": {}
      }
    ],
    "breakpoints": [
      {
        "language": "csharp"
      },
      {
        "language": "fsharp"
      }
    ],
    "debuggers": [
      {
        "type": "dotnet-meteor.debug",
        "label": ".NET Meteor Debugger",
        "program": "./extension/bin/dotnet-mobile.dll",
        "args": [ "--start-session"],
        "runtime": "dotnet",
        "initialConfigurations": [
          {
            "name": "Debug .NET Mobile App",
            "type": "dotnet-meteor.debug",
            "request": "launch",
            "preLaunchTask": "dotnet-meteor: build"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig-dev.json"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.2.0"
  }
}
